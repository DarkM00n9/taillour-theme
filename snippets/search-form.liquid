 <form id="{{- id | default: 'header-search' -}}" class="flex middle center" action="{{ routes.search_url }}" method="get">
  <input type="hidden" name="type" value="product">
  <input type="search"
    name="q"
    value="{{ search.terms }}"
    placeholder="Search products..."
    maxlength="128">
  <button type="submit" class="button">Search</button>
</form>
