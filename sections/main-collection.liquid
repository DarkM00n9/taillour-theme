<style>
#collection {
  display: grid;
  grid-template-columns: 200px auto;
  gap: 3rem;
}
#collection aside h3,
#collection aside p {
  margin-top: 0;
  margin-bottom: 0;
}
#collection aside > div {
  margin-bottom: 1.5rem;
}
</style>

{% capture styles %}
grid-template-columns: repeat({{ section.settings.products_per_row }}, 1fr);
{% endcapture %}

<div class="section-wrap">
  <div class="section">
    <h1 data-title="{{ collection.title }}">{{ collection.title }}</h1>
    <div class="rte">
      {{ collection.description }}
    </div>
  </div>
</div>

<div class="section-wrap">
  <div id="collection" class="section">
    <aside>
      <div class="flex middle">
        <h3>Filters</h3>
        <p>
          <em><a href="{{ collection.url }}?sort_by={{ collection.sort_by }}">Clear all</a></em>
        </p>
      </div>
      {% render 'collection-filters' %}
    </aside>

    {% paginate collection.products by section.settings.limit %}
    <div>
      <div class="section">
        <p>{{ collection.products_count }} products</p>

        <div class="products-grid" style="{{ styles }}">
          {% liquid
          for product in collection.products
            render 'product-card', product: product
          endfor
          %}
        </div>
      </div>

      <div class="section">
        <div>
          {% render 'pagination', paginate: paginate %}
        </div>
      </div>
    </div>
    {% endpaginate %}
  </div>


</div>

{% schema %}
{
  "name": "Collection",
  "tag": "section",
  "class": "collection-products-section",
  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "range",
      "id": "limit",
      "label": "Limit",
      "info": "Limit the number of products displayed per page.",
      "min": 4,
      "max": 50,
      "step": 1,
      "default": 24
    },
    {
      "type": "range",
      "id": "products_per_row",
      "label": "Products Per Row",
      "info": "Number of products per row.",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 4
    }
  ]
}
{% endschema %}
